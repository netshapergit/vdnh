<ol class="breadcrumb">
	{% for item in config.pages if item.active and item.title %}
		{% if item.path == request.path %}
			<li class="active">
				{$ item.title $}
			</li>
		{% else %}
			<li>
				<a href="{$ item.path $}">
					{$ item.title $}
				</a>
			</li>
		{% endif %}
	{% endfor %}
</ol>
